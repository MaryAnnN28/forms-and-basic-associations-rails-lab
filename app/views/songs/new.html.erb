<h1>Create a Song</h1>

<b>
<%= form_for @song  do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <br />

  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <br />

  <%= f.label :genre_id %><br>
  <%= f.collection_select :genre_id, Genre.all, :id, :name %><br>
  <br />

  <label>Song Notes</label><br>
  <textarea name="song[note_contents][]" id="song_notes_1" cols="30" rows="3"></textarea><br><br>
  <textarea name="song[note_contents][]" id="song_notes_2" cols="30" rows="3"></textarea><br><br>
  <textarea id="song_notes_3" name="song[note_contents][]" cols="30" rows="3"></textarea><br><br>
  <br />

</b>
  <%= f.submit %>
<% end %>


